@using Abp.Web.Mvc.Extensions
@using System.Web.Optimization
@model Storemey.Web.Models.Account.SignupViewModel

@{
    Layout = "~/Views/Shared/_LayoutStoremeyFront.cshtml";

    string iddisabled = "";
    if (!string.IsNullOrEmpty(Storemey.StoremeyConsts.StoreName))
    {
        iddisabled = "readonly=\"readonly=\"";
    }
    string EmailPattern = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
}


<!DOCTYPE html>
<html lang="en" ng-app="application">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/Logos/Storemey (2).png" />


    @Styles.Render("~/Bundles/Login")

</head>
<body ng-controller="LayoutController" style="background-color:#fff !important">
    <div class="row" style="background-image: url('/assets/images/metal-coffee-tamp_4460x4460.jpg') !important;background-position:center !important;background-size:cover !important;height:100vh;">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
            <div class="caption" style="padding: 20px;background-color: #000;opacity: 0.9;">

                <div class="logo text-center">
                    <center> <a href="/"><img src="/Logos/Storemey (3).png" class="img-responsive" /></a></center>
                </div>
                <p class="text-center text-dark text-bold text-extra-large margin-top-15">
                    <center>
                        <h4 class="text-white text-bold">
                            Welcome to Storemey
                        </h4>
                    </center>
                    <center>
                        <h6 class="text-white text-bold" style="color: #c82e29 !important;font-weight: 600;font-size: 20px;">
                            Start your 7-Days FREE TRIAL today!
                        </h6>
                    </center>
                </p>
                <div class="box-login">
                    <form id="RegisterForm" method="POST" action="/Signup" autocomplete="off">
                        <div class="form-group">
                            <input class="form-control" type="text" id="regStorename" name="RegStoreName" placeholder="   Store name" value="@Storemey.StoremeyConsts.StoreName" maxlength="25" minlength="3" required autofocus autocomplete="off" />
                            <span class="focus-input100 tenantIcon1" style="visibility:hidden;float:right;color:white;display:none;font-weight: 900;font-size: large;">
                                Storename is valid. <i class="fa fa-check"></i>
                            </span>
                            <span class="focus-input100 tenantIcon2" style="visibility:hidden;float:right;color:red;font-weight: 900;font-size: large;">
                                Storename not valid. <i class="fa fa-times"></i>
                            </span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="RegName" placeholder="   Username" value="" maxlength="200" required autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="RegEmail" placeholder="   Email" pattern="@EmailPattern" title="Plese enter valid email" value="" email maxlength="200" required autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <input class="form-control password" type="password" id="RegPassword" name="RegPassword" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" placeholder="   Password" required maxlength="100" value="" autocomplete="off" />
                        </div>
                        <div class="form-group" style="margin:0 !important">

                            <input type="checkbox" id="checkbox1">
                            <label for="checkbox1">
                                <a ng-click="asyncContent1();" class="txt1" style="text-decoration:underline;font-weight:bold;cursor: pointer;">
                                    I agree with storemey applications And the Terms and Conditions.
                                </a>
                            </label>
                        </div>
                        <div class="form-actions">
                            <button type="submit" id="RegButton" class="btn btn-red btn-block">
                                Signup
                            </button>
                        </div>
                        <div class="new-account text-center">
                            <p class="text-white text-center">
                                <a href="/Login"> Already registered!</a>
                            </p>
                        </div>
                    </form>
                </div>
                <!-- end: LOGIN BOX -->
            </div>
        </div>
    </div>
    <!-- end: LOGIN -->


    @Scripts.Render("~/Bundles/LoginJS")
</body>
</html>
<script src="/Views/Home/Signup.js"></script>
<script src="/Common/Scripts/jQueryHelper.js"></script>




<script src="~/Scripts/angular.min.js"></script>
<link href="~/lib/angular-confirm-master/dist/angular-confirm.min.css" rel="stylesheet" />
<script src="~/lib/angular-confirm-master/dist/angular-confirm.min.js"></script>

<script type="text/javascript">

    angular.module('application', ['cp.ngConfirm'])
        .controller('LayoutController', [
            '$scope',
            '$ngConfirm',
            '$interval',
            '$ngConfirmDefaults',
            '$timeout',
            function ($scope, $ngConfirm, $interval, $ngConfirmDefaults, $timeout) {
                $scope.asyncContent = function () {
                    $ngConfirm({
                        title: 'Privacy and policy',
                        contentUrl: '/Views/Home/Privacya and policy .html',
                        columnClass: 'medium', // to make the width wider.
                        animation: 'zoom',
                        backgroundDismiss: true,
                    })
                };

                $scope.asyncContent1 = function () {
                    $ngConfirm({
                        title: 'Terms & Conditions',
                        contentUrl: '/Views/Home/TermsAndConditions.html',
                        columnClass: 'medium', // to make the width wider.
                        animation: 'zoom',
                        backgroundDismiss: true,
                    })
                };
            }
        ]);

</script>

<style style="">
    .ng-confirm-bg.ng-confirm.ng-confirm-light .ng-confirm-bg, .ng-confirm.ng-confirm-white .ng-confirm-bg {
        opacity: 0.9 !important;
    }

    .col-md-offset-3 {
        margin-left: 15% !important;
    }

    .col-md-6 {
        width: 70% !important;
    }
</style>