
@{
    string EmailPattern = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";

}


<div class="breadcrumb-wrapper">
    <h4 class="mainTitle no-margin">Email Templates</h4>
</div>
<!-- end: BREADCRUMB -->
<!-- start: BASIC EXAMPLE -->
<div class="container-fluid container-fullw" ng-controller="app.views.adminEmailTemplates">
    <div class="row">
        <div class="col-md-12">
            <fieldset>
                <legend>
                    Add/Update Of, Email Template!
                </legend>
                <div class="panel panel-white">
                    <div class="panel-body">

                        <div class="row">
                            <form role="form" id="frmCountry" name="myForm" ng-submit="register(myForm)" ng-validate="validationOptions">
                                <div>
                                    <div class="panel panel-white" style="background-color: #fbecb5;">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" uib-datepicker-popup="{{format}}" ng-model="dt" is-open="inputopened" ng-init="inputopened = false" ng-click="inputopened = !inputopened" datepicker-options="datepickerOptions" ng-required="true" close-text="Close" />
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            From Email
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.fromEmail" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            To Email
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.toEmail" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            CCEmail
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.ccEmail" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            BCCEmail
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.bccEmail" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            EmailKey
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.emailKey" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            Subject
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.subject" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            Body
                                                        </label>
                                                        @*<input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.body" id="exampleInputEmail1" placeholder="enter name" required>*@
                                                        <div ckeditor="options" ng-model="GetadminEmailTemplatesOutputDto.body" ready="onReady()"></div>
                                                        @*<div class="well margin-top-20">
                                                                {{content}}
                                                            </div>*@
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">
                                                            Attached File
                                                        </label>
                                                        <input type="text" class="form-control" ng-model="GetadminEmailTemplatesOutputDto.attachedFile" id="exampleInputEmail1" placeholder="enter name" required>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-footer">
                                            <button class="btn btn-primary btn-wide" type="submit" ng-disabled="myForm.$invalid" ng-click="saveAddEdit(this)">
                                                Save
                                            </button>

                                            <button class="btn btn-default btn-wide" type="button" ng-click="cancelAddEdit()">
                                                Back
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
